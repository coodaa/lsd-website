---
import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";

const baseUrl = import.meta.env.WP_API;

// ðŸ”¹ Alle verÃ¶ffentlichten Seiten laden
let pages = [];
try {
  const res = await fetch(
    `${baseUrl}/pages?per_page=100&orderby=menu_order&order=asc&status=publish`
  );
  if (res.ok) {
    pages = await res.json();
  }
} catch (err) {
  console.error("âŒ Fehler beim Laden der Seiten:", err);
}

// ðŸ”¹ Erste Hauptseite bestimmen (z. B. LSD)
const firstPage = pages.find((p) => p.parent === 0);

// ðŸ”¹ Unterseiten dieser Seite
const childPages = pages.filter((p) => p.parent === firstPage?.id);

// ðŸ”¹ MenÃ¼ sortieren (Kontakt ans Ende)
let sortedPages = [...pages.filter((p) => p.parent === 0)];
const kontaktIndex = sortedPages.findIndex((p) => p.slug === "kontakt");
if (kontaktIndex > -1) {
  const [kontaktPage] = sortedPages.splice(kontaktIndex, 1);
  sortedPages.push(kontaktPage);
}

function getFirstImage(html) {
  const match = html?.match(/<img[^>]+src="([^">]+)"/i);
  return match ? match[1] : null;
}
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{firstPage?.title?.rendered || "LSD Berlin"}</title>
  </head>

  <body class={`slug-${firstPage?.slug || "home"}`}>
    <div class="grid-layout">
      <Sidebar pages={sortedPages} activeSlug={firstPage?.slug} />

      <main class="content-area">
        <div class="content">
          <!-- ðŸ”¹ Hauptinhalt -->
          <div set:html={firstPage?.content?.rendered} />

          <!-- ðŸ”¹ Unterseiten mit Bildern -->
          {
            childPages.length > 0 && (
              <div class="subpages">
                {childPages.map((child) => {
                  const img = getFirstImage(child.content.rendered);
                  return (
                    <a href={`/${child.slug}`} class="subpage">
                      {img && <img src={img} alt={child.title.rendered} />}
                      <h2 set:html={child.title.rendered} />
                    </a>
                  );
                })}
              </div>
            )
          }
        </div>
      </main>
    </div>
  </body>
</html>
