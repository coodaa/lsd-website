---
const { page } = Astro.props;
---

<style>
  .content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-left: 240px;
    padding: 3rem 2rem;
    min-height: 100vh;
    background: white;
  }

  .content {
    max-width: 720px; /* zentriert und begrenzt */
    width: 100%;
    font-family: 'Courier Prime', monospace;
    color: black;
  }

  .close-btn {
    position: absolute;
    top: 2rem;
    right: 2rem;
    font-size: 1.4rem;
    cursor: pointer;
  }

  .content h1 {
    margin-top: 0;
  }

  @media (max-width: 768px) {
    .content-wrapper {
      margin-left: 0;
      padding: 2rem 1rem;
    }
    .close-btn {
      top: 1rem;
      right: 1rem;
    }
  }
</style>

<div class="content-wrapper" id={page?.slug}>
  <div class="close-btn">Ã—</div>
  <div class="content">
    <h1 set:html={page?.title?.rendered}></h1>
    <div set:html={page?.content?.rendered}></div>
  </div>
</div>
