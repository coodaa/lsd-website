---
const { page } = Astro.props;
---

<style>
  .content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-left: 240px;
    padding: 3rem 2rem;
    min-height: 100vh;
    background: white;
    overflow-x: hidden; /* Kein horizontales Scrollen */
  }

  .content {
    width: 100%;
    max-width: 720px; /* zentrierter Bereich */
    font-family: 'Courier Prime', monospace;
    color: black;
    line-height: 1.6;
    word-break: break-word;
  }

  .content h1 {
    margin-top: 0;
    font-size: 1.6rem;
    line-height: 1.3;
  }

  /* ðŸ”¹ Bilder & Figure-Elemente */
  .content img,
  .content figure,
  .content .wp-block-image,
  .content .wp-block-image img {
    width: 100% !important;
    max-width: 100% !important;
    height: auto !important;
    display: block;
    margin: 1.5rem auto;
    object-fit: contain;
  }

  /* ðŸ”¹ Figure neutralisieren */
  .content figure {
    margin: 1.5rem 0 !important;
    padding: 0 !important;
  }

  /* ðŸ”¹ Eingebettete Videos */
  .content iframe {
    width: 100% !important;
    max-width: 100%;
    aspect-ratio: 16 / 9;
    display: block;
    margin: 2rem 0;
  }

  /* ðŸ”¹ Tabellen */
  .content table {
    width: 100%;
    border-collapse: collapse;
    overflow-x: auto;
    display: block;
  }

  /* ðŸ”¹ Galerien (WP-Blocks) */
  .content .wp-block-gallery,
  .content .blocks-gallery-grid,
  .content .wp-block-columns,
  .content .wp-block-group {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }

  /* Einzelbilder in Galerien */
  .content .wp-block-gallery figure,
  .content .blocks-gallery-item,
  .content .wp-block-column {
    flex: 1 1 100%;
    max-width: 100%;
  }

  @media (min-width: 769px) {
    /* Desktop: 2 Spalten */
    .content .wp-block-gallery figure,
    .content .blocks-gallery-item {
      flex: 1 1 calc(50% - 1rem);
      max-width: calc(50% - 1rem);
    }
  }

  /* ðŸ”§ WP-Editor: Inline width/height Ã¼berschreiben */
  .content figure[style*="width"],
  .content figure[style*="height"],
  .content img[style*="width"],
  .content img[style*="height"] {
    width: auto !important;
    height: auto !important;
    max-width: 100% !important;
  }

  /* ðŸ”§ WP-BlÃ¶cke zuverlÃ¤ssig auf Containerbreite */
  .content .wp-block-image,
  .content .wp-block-image figure,
  .content .wp-block-image img {
    width: 100% !important;
    max-width: 100% !important;
    height: auto !important;
    display: block;
  }

  /* Sicherheitshalber Ãœberlauf blockieren */
  .content { overflow-x: hidden; }

  @media (max-width: 768px) {
    .content-wrapper {
      margin-left: 0;
      padding: 1.5rem 1rem;
    }

    .content {
      max-width: 100%;
    }

    .content h1 {
      font-size: 1.3rem;
    }

    /* Mobile: 1 Spalte in Galerien */
    .content .wp-block-gallery figure,
    .content .blocks-gallery-item,
    .content .wp-block-column {
      flex: 1 1 100%;
      max-width: 100%;
    }
  }
</style>

<div class="content-wrapper" id={page?.slug}>
  <div class="content">
    <h1 set:html={page?.title?.rendered}></h1>
    <div set:html={page?.content?.rendered}></div>
  </div>
</div>
