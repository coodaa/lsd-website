---
const { pages, activeSlug } = Astro.props;
---

<nav class="sidebar">
  <button class="menu-button">Menü</button>
  <ul>
    {pages.map((page) => (
      <li class={page.slug === activeSlug ? "active" : ""}>
        <a href={`/${page.slug}`}>{page.title.rendered}</a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .sidebar {
    background: white;
    color: black;
    position: fixed;
    top: 0;
    right: 0;
    height: 100%;
    width: 250px;
    transform: translateX(100%);
    transition: transform 0.3s ease;
    padding: 2rem;
    z-index: 10;
  }

  /* Menü-Button */
  .menu-button {
    position: fixed;
    top: 20px;
    right: 20px;
    background: none;
    color: black;
    border: none;
    font-size: 1.2rem;
    cursor: pointer;
  }

  /* Mobile aktiv */
  .sidebar.open {
    transform: translateX(0);
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  li {
    margin-bottom: 1.2rem;
  }

  a {
    text-decoration: none;
    color: black;
    font-size: 1.1rem;
  }

  a:hover {
    text-decoration: underline;
  }

  /* Desktop */
  @media (min-width: 900px) {
    .menu-button {
      display: none; /* Menü-Button ausblenden */
    }

    .sidebar {
      transform: none;
      position: static;
      width: auto;
      height: auto;
      display: flex;
      gap: 2rem;
      padding: 0;
      background: white;
    }

    ul {
      display: flex;
      gap: 2rem;
    }

    li {
      margin: 0;
    }
  }

  /* Alles Weiß, keine Linien oder Grau */
  html, body {
    background: white;
  }
</style>

<script>
  const menuButton = document.querySelector(".menu-button");
  const sidebar = document.querySelector(".sidebar");

  menuButton?.addEventListener("click", () => {
    sidebar.classList.toggle("open");
  });
</script>
