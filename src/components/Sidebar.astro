---
const { pages = [], activeSlug } = Astro.props;

// Seiten exakt nach WordPress-"menu_order" sortieren
let filteredPages = [...pages].sort((a, b) => {
  const orderA = a.menu_order ?? 0;
  const orderB = b.menu_order ?? 0;
  return orderA - orderB;
});

// Impressum & Datenschutz nur unten anzeigen – aber nicht doppelt
// Impressum & Datenschutz unabhängig vom Slug erkennen
const footerPages = filteredPages.filter(p =>
  p.title.rendered.toLowerCase().includes("impressum") ||
  p.title.rendered.toLowerCase().includes("datenschutz")
);

// Entferne sie aus der Hauptliste, damit sie unten stehen
filteredPages = filteredPages.filter(
  p => !footerPages.includes(p)
);
---

<aside class="sidebar">
  <button class="menu-toggle" id="menuToggle" aria-label="Menü öffnen">
    <span class="menu-label">
      <span class="menu-text">MENU</span>
      <span class="menu-close">X</span>
    </span>
  </button>

  <ul id="menuList">
    {filteredPages.map(p => (
      <li class={p.slug === activeSlug ? "active" : ""}>
        <a href={`/${p.slug}`} class={p.slug === activeSlug ? "active" : ""}>
          {p.title.rendered}
        </a>
      </li>
    ))}
    <div class="mobile-footer">
      {footerPages.map((p, i) => (
        <>
          <a href={`/${p.slug}`}>{p.title.rendered}</a>
          {i < footerPages.length - 1 && <span class="dot">·</span>}
        </>
      ))}
    </div>
  </ul>

  <div class="sidebar-footer" id="sidebarFooter">
    {footerPages.map((p, i) => (
      <>
        <a href={`/${p.slug}`}>{p.title.rendered}</a>
        {i < footerPages.length - 1 && <span class="dot">·</span>}
      </>
    ))}
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const btn = document.getElementById("menuToggle");
      const list = document.getElementById("menuList");
      const body = document.body;
      if (btn && list) {
        btn.addEventListener("click", () => {
          const isOpen = list.classList.toggle("open");
          btn.classList.toggle("open", isOpen);
          btn.setAttribute("aria-label", isOpen ? "Menü schließen" : "Menü öffnen");
          body.style.overflow = isOpen ? "hidden" : "";
          body.style.height = isOpen ? "100vh" : "";
        });
      }
    });
  </script>
</aside>

<style>
  .sidebar {
    position: sticky;
    top: 0;
    height: 100vh;
    width: 250px;
    padding: 0 0 2rem 1rem;
    display: flex;
    flex-direction: column;
    z-index: 10;
    font-family: "Courier Prime", monospace;
  }

  #menuList {
    list-style-type: square;
    list-style-position: inside;
    padding-left: 0.5rem;
    margin: 2rem 0 0 0;
  }

  #menuList li {
    margin: 1.2rem 0;
    font-size: 1.4rem;
    line-height: 1.6;
  }

  #menuList a {
    color: black;
    text-decoration: none;
  }

  #menuList a.active {
    text-decoration: underline;
  }

  .sidebar-footer {
    margin-top: auto;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .menu-toggle {
    display: none;
    align-items: center;
    justify-content: flex-end;
    width: 100%;
    background: none;
    border: none;
    color: black;
    font-size: 1rem;
    letter-spacing: 0.05em;
    cursor: pointer;
    padding: 0.5rem 1rem;
    z-index: 1001;
  }

  .menu-label {
    position: relative;
    width: 3.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .menu-text,
  .menu-close {
    position: absolute;
    left: 0;
    right: 0;
    text-align: right;
    transition: opacity 0.2s ease;
  }

  .menu-text {
    opacity: 1;
  }

  .menu-close {
    opacity: 0;
  }

  .menu-toggle.open .menu-text {
    opacity: 0;
  }

  .menu-toggle.open .menu-close {
    opacity: 1;
  }

  @media (max-width: 1200px) {
    .sidebar {
      width: 100%;
      height: auto;
      padding: 1rem;
    }

    .menu-toggle {
      display: flex;
      position: fixed;
      top: 1rem;
      right: 1rem;
    }

    .menu-text,
    .menu-close {
      font-size: 1.2rem;
    }

    #menuList {
      display: none;
      position: fixed;
      inset: 0;
      background: white;
      z-index: 1000;
      padding: 4rem 2rem 5rem;
      list-style-type: square;
      list-style-position: inside;
      overflow-y: auto;
    }

    #menuList.open {
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
    }

    #menuList li {
      margin: 0.4rem 0;
      font-size: 1.5rem;
    }

    .mobile-footer {
      position: fixed;
      bottom: 1.5rem;
      right: 2rem;
      font-size: 0.9rem;
      display: flex;
      align-items: center;
      gap: 0.4rem;
    }

    #menuList:not(.open) .mobile-footer {
      display: none;
    }

    .sidebar-footer {
      display: none;
    }
  }

  @media (min-width: 1201px) {
    .mobile-footer {
      display: none !important;
    }
  }
</style>
