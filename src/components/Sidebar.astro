---
const { pages = [], activeSlug } = Astro.props;
---

<aside class="sidebar">
  <!-- Toggle Button -->
  <button class="menu-toggle" id="menuToggle" aria-label="Menü öffnen">
    <span class="menu-label">
      <span class="menu-text">MENÜ</span>
      <span class="menu-close">×</span>
    </span>
  </button>

  <!-- Menü-Liste -->
  <ul id="menuList">
    {pages.map((p) => (
      <li>
        <a href={`/${p.slug}`} class={p.slug === activeSlug ? "active" : ""}>
          {p.title.rendered}
        </a>
      </li>
    ))}
  </ul>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const btn = document.getElementById("menuToggle");
      const list = document.getElementById("menuList");
      if (!btn || !list) return;

      btn.addEventListener("click", () => {
        const isOpen = list.classList.toggle("open");
        btn.classList.toggle("open", isOpen);
        btn.setAttribute("aria-label", isOpen ? "Menü schließen" : "Menü öffnen");
      });
    });
  </script>
</aside>

<style>
/* ===== Basislayout ===== */
.sidebar {
  position: relative;
  z-index: 10;
}

/* ===== Toggle Button ===== */
.menu-toggle {
  display: none;
  position: fixed;
  top: 1.5rem;
  right: 1.5rem;
  z-index: 1000;
  background: none;
  border: none;
  color: black;
  font-family: "Courier Prime", monospace;
  font-size: 1rem;
  letter-spacing: 0.05em;
  cursor: pointer;
  padding: 0;
}

/* Platzhalter sorgt dafür, dass MENÜ und X gleich groß wirken */
.menu-label {
  position: relative;
  display: inline-block;
  width: 4.5ch;
  text-align: right;
}

/* Beide Texte exakt übereinander */
.menu-text,
.menu-close {
  position: absolute;
  top: 0;
  right: 0;
  transition: opacity 0.25s ease, transform 0.25s ease;
}

/* Ausgangszustand */
.menu-text {
  opacity: 1;
}
.menu-close {
  opacity: 0;
  font-size: 1.2rem;
  line-height: 1;
  transform: rotate(-90deg);
}

/* Wenn geöffnet */
.menu-toggle.open .menu-text {
  opacity: 0;
}
.menu-toggle.open .menu-close {
  opacity: 1;
  transform: rotate(0deg);
}

/* ===== Menü-Liste ===== */
#menuList {
  list-style: none;
  padding: 0;
  margin: 2rem 0 0 0;
}

#menuList li {
  margin: 0.4rem 0;
}

#menuList a {
  color: black;
  text-decoration: none;
  transition: border-color 0.2s;
}

#menuList a.active {
  border-bottom: 1px solid black;
}

/* ===== Mobile Styles ===== */
@media (max-width: 900px) {
  .menu-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #menuList {
    display: none;
    position: fixed;
    inset: 0;
    background: white;
    padding-top: 6rem;
    text-align: center;
    z-index: 999;
    animation: fadeIn 0.3s ease forwards;
  }

  #menuList.open {
    display: block;
  }

  #menuList li {
    margin: 1.5rem 0;
    font-size: 1.6rem;
  }

  .sidebar {
    position: static;
  }
}

/* ===== Animation ===== */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>
