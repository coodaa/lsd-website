---
const { pages = [], activeSlug, footerPages = [] } = Astro.props;
---

<aside class="sidebar">
  <ul id="menuList">
    {pages.map((p) => (
      <li class={p.slug === activeSlug ? "active" : ""}>
        <a href={`/${p.slug}`}>{p.title.rendered}</a>
      </li>
    ))}
  </ul>

  <div class="mobile-footer">
    {footerPages.map((p, i) => (
      <>
        <a href={`/${p.slug}`}>{p.title.rendered}</a>
        {i < footerPages.length - 1 && <span class="dot">Â·</span>}
      </>
    ))}
  </div>
</aside>
