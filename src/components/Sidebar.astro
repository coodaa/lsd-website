---
const { pages, activeSlug } = Astro.props;
---

<style>
  .sidebar {
    width: 240px;
    padding: 2rem 1rem;
    background: white;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    overflow-y: auto;
    font-family: 'Courier Prime', monospace;
  }

  .sidebar a {
    display: block;
    text-decoration: none;
    color: black;
    margin-bottom: 0.8rem;
    font-size: 1rem;
  }

  .sidebar a.active {
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .sidebar {
      display: none;
    }

    .sidebar.open {
      display: block;
      position: static;
      width: 100%;
      padding: 1rem;
    }

    .menu-toggle {
      display: block;
      text-align: right;
      padding: 1rem;
      cursor: pointer;
    }
  }

  .menu-toggle {
    display: none;
  }
</style>

<div class="menu-toggle" id="menuToggle">Men√º</div>
<nav class="sidebar" id="sidebar">
  {pages.map(page => (
    <a
      href={`#${page.slug}`}
      class={page.slug === activeSlug ? 'active' : ''}
    >
      {page.title.rendered}
    </a>
  ))}
</nav>

<script>
  const toggle = document.getElementById('menuToggle');
  const sidebar = document.getElementById('sidebar');
  toggle?.addEventListener('click', () => {
    sidebar.classList.toggle('open');
  });
</script>
