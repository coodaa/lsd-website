---
import "../styles/global.css";

const props = Astro.props ?? {};

const title =
  props.title ??
  "LSD Berlin – Künstlerkollektiv für experimentelle Theater- und Performancearbeit";

const description =
  props.description ?? "LSD Berlin ist ein Künstlerkollektiv.";

const image = props.image ?? "/og-default.jpg";
const url = props.url ?? "https://www.lsd-berlin.de";
const bodyClass = props.bodyClass ?? "";
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>

    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={url} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${url}${image}`} />
    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />

    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Optional PWA -->
    <link rel="manifest" href="/site.webmanifest" />
  </head>

  <body class={bodyClass}>
    <slot />
    <slot name="footer" />
  </body>
</html>
