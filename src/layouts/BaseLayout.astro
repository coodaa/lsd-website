---
import "/src/styles/global.css";

const menuItems = [
  { name: "LSD", href: "/" },
  { name: "Volksbühne", href: "/volksbuehne" },
  { name: "Drogen", href: "/drogen" },
  { name: "Kunst", href: "/kunst" },
  { name: "Theater", href: "/theater" },
  { name: "Film", href: "/film" },
  { name: "Musik", href: "/musik" },
  { name: "Bücher/Kataloge", href: "/buecher" },
  { name: "Shop", href: "/shop" },
  { name: "Kontakt", href: "/kontakt" },
];
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LSD Berlin</title>
  </head>

  <body>
    <header class="mobile-header">
      <div class="logo">LSD</div>
      <button class="menu-toggle" aria-label="Menü öffnen">Menu</button>
    </header>

    <div class="layout">
      <nav class="sidebar">
        <ul>
          {menuItems.map((item) => (
            <li><a href={item.href}>{item.name}</a></li>
          ))}
        </ul>

        <div class="footer-links">
          <a href="/datenschutz">Datenschutz</a>
          <a href="/impressum">Impressum</a>
        </div>
      </nav>

      <main class="content">
        <slot />
      </main>
    </div>

    <script>
      const btn = document.querySelector(".menu-toggle");
      const nav = document.querySelector(".sidebar");
      btn.addEventListener("click", () => {
        nav.classList.toggle("open");
      });
    </script>
  </body>
</html>
