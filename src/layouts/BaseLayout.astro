---
import "../styles/global.css";

const props = Astro.props ?? {};

const title =
  props.title ??
  "LSD Berlin – Künstlerkollektiv für experimentelle Theater- und Performancearbeit";

const description =
  props.description ?? "LSD Berlin ist ein Künstlerkollektiv.";

const bodyClass = props.bodyClass ?? "";

// Base URL (aus astro.config.mjs: site: "https://www.lsd-berlin.de")
const site =
  Astro.site?.toString().replace(/\/$/, "") || "https://www.lsd-berlin.de";

// Aktuelle URL der Seite (inkl. Pfad)
const canonical = new URL(Astro.url.pathname, site).toString();

// OG image: erlaubt prop.image ("/og.jpg" oder full url)
const imagePath = props.image ?? "/og-default.jpg";
const ogImage = imagePath.startsWith("http")
  ? imagePath
  : new URL(imagePath, site).toString();
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>

    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonical} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />

    <!-- Optional: Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Optional PWA -->
    <link rel="manifest" href="/site.webmanifest" />
  </head>

  <body class={bodyClass}>
    <slot />
    <slot name="footer" />
  </body>
</html>
