---
import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";

export const prerender = true;

// ğŸ”§ Alle Seiten aus der WP-API holen (fÃ¼r Routing + Sidebar)
export async function getStaticPaths() {
  const baseUrl = import.meta.env.WP_API;

  try {
    const res = await fetch(`${baseUrl}/pages?per_page=100&orderby=menu_order&order=asc`);
    const pages = await res.json();

    return pages.map((page) => ({
      params: { slug: page.slug },
      props: { page, pages }, // wir geben die Seite + alle Seiten mit
    }));
  } catch (err) {
    console.error("âŒ Fehler in getStaticPaths:", err);
    return [];
  }
}

const { page, pages } = Astro.props;
const slug = page?.slug;
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{page?.title?.rendered || "LSD Berlin"}</title>
  </head>
  <body class={`slug-${slug}`}>
    <div class="grid-layout">
      <Sidebar pages={pages} activeSlug={slug} />
      <main class="content-area">
        <div class="content" set:html={page?.content?.rendered}></div>
      </main>
    </div>
  </body>
</html>
