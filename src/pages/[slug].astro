import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";

export const prerender = true;

// ðŸ”§ Alle Seiten aus der WP-API holen
export async function getStaticPaths() {
  const baseUrl = import.meta.env.WP_API;

  try {
    const res = await fetch(
      `${baseUrl}/pages?per_page=100&orderby=menu_order&order=asc&status=publish`
    );
    const pages = await res.json();

    return pages.map((page) => ({
      params: { slug: page.slug },
      props: { page, pages },
    }));
  } catch (err) {
    console.error("âŒ Fehler in getStaticPaths:", err);
    return [];
  }
}

const { page, pages } = Astro.props;
const slug = page?.slug;

// Nur Hauptseiten im MenÃ¼ anzeigen
const mainPages = pages.filter((p) => p.parent === 0);

// Unterseiten der aktuellen Seite (z. B. Kunst â†’ Kindseiten)
const childPages = pages.filter((p) => p.parent === page.id);

// PrÃ¼fen, ob aktuelle Seite selbst eine Unterseite ist
const parentPage = pages.find((p) => p.id === page.parent);

// Kontakt ans Ende verschieben
let sortedPages = [...mainPages];
const kontaktIndex = sortedPages.findIndex((p) => p.slug === "kontakt");
if (kontaktIndex > -1) {
  const [kontaktPage] = sortedPages.splice(kontaktIndex, 1);
  sortedPages.push(kontaktPage);
}

// Erstes Bild jeder Unterseite finden
function getFirstImage(html) {
  const match = html?.match(/<img[^>]+src="([^">]+)"/i);
  return match ? match[1] : null;
}
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{page?.title?.rendered || "LSD Berlin"}</title>
  </head>

  <body class={`slug-${slug}`}>
    <div class="grid-layout">
      <Sidebar pages={sortedPages} activeSlug={slug} />

      <main class="content-area">
        <div class="content">
          <!-- ðŸ”¹ Falls Unterseite: X anzeigen -->
          {
            parentPage && (
              <a href={`/${parentPage.slug}`} class="close-btn">
                Ã—
              </a>
            )
          }

          <!-- Hauptinhalt -->
          <div set:html={page?.content?.rendered} />

          <!-- Unterseiten mit Vorschaubild -->
          {
            childPages.length > 0 && (
              <div class="subpages">
                {childPages.map((child) => {
                  const img = getFirstImage(child.content.rendered);
                  return (
                    <a href={`/${child.slug}`} class="subpage">
                      {img && <img src={img} alt={child.title.rendered} />}
                    </a>
                  );
                })}
              </div>
            )
          }
        </div>
      </main>
    </div>
  </body>
</html>

