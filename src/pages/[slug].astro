/**
 * Dynamische Seiten aus WordPress laden (robuste Version für Static Build)
 */
export async function getStaticPaths() {
  const baseUrl = import.meta.env.WP_API || "https://lsd-backend.de/wp-json/wp/v2";
  const apiUrl = `${baseUrl}/pages`;

  console.log("Fetching pages from:", apiUrl);

  try {
    const res = await fetch(apiUrl);
    if (!res.ok) throw new Error(`Fetch error: ${res.status}`);
    const pages = await res.json();

    // Wenn keine Seiten gefunden wurden → leeres Array
    if (!Array.isArray(pages) || pages.length === 0) {
      console.warn("⚠️ Keine Seiten gefunden!");
      return [];
    }

    return pages.map((page) => ({
      params: { slug: page.slug },
      props: { page },
    }));
  } catch (err) {
    console.error("❌ Fehler in getStaticPaths:", err);
    return [];
  }
}

export async function get({ params }) {
  const baseUrl = import.meta.env.WP_API || "https://lsd-backend.de/wp-json/wp/v2";
  const apiUrl = `${baseUrl}/pages?slug=${params.slug}`;

  console.log("Fetching single page:", apiUrl);

  try {
    const res = await fetch(apiUrl);
    if (!res.ok) throw new Error(`Fetch error: ${res.status}`);

    const data = await res.json();
    const page = data && data[0] ? data[0] : null;

    if (!page) {
      return {
        props: {
          page: {
            title: { rendered: "Seite nicht gefunden" },
            content: { rendered: "<p>Diese Seite existiert nicht.</p>" },
          },
        },
      };
    }

    return { props: { page } };
  } catch (err) {
    console.error("❌ Fehler in get():", err);
    return {
      props: {
        page: {
          title: { rendered: "Fehler beim Laden" },
          content: { rendered: "<p>Inhalte konnten nicht geladen werden.</p>" },
        },
      },
    };
  }
}
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{page?.title?.rendered || "Seite"}</title>
  </head>
  <body>
    <main>
      <h1 set:html={page?.title?.rendered || "Unbekannte Seite"}></h1>
      <div set:html={page?.content?.rendered || "<p>Kein Inhalt vorhanden.</p>"}></div>
    </main>
  </body>
</html>
