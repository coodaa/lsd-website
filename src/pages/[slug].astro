---
/**
 * Dynamische Seiten aus WordPress laden (mit Fallback, falls ENV fehlt)
 */
export async function getStaticPaths() {
  // Fallback direkt innerhalb der Funktion definieren
  const baseUrl = import.meta.env.WP_API || "https://lsd-backend.de/wp-json/wp/v2";
  const apiUrl = `${baseUrl}/pages`;

  console.log("Fetching pages from:", apiUrl);

  try {
    const res = await fetch(apiUrl);
    if (!res.ok) throw new Error(`Fetch error: ${res.status}`);

    const pages = await res.json();

    return pages.map((page) => ({
      params: { slug: page.slug },
      props: { page },
    }));
  } catch (err) {
    console.error("❌ Fehler in getStaticPaths:", err);
    return [];
  }
}

export async function get({ params }) {
  // Hier ebenfalls wieder baseUrl definieren
  const baseUrl = import.meta.env.WP_API || "https://lsd-backend.de/wp-json/wp/v2";
  const apiUrl = `${baseUrl}/pages?slug=${params.slug}`;
  console.log("Fetching single page:", apiUrl);

  try {
    const res = await fetch(apiUrl);
    if (!res.ok) throw new Error(`Fetch error: ${res.status}`);

    const data = await res.json();
    const page = data[0];

    return { props: { page } };
  } catch (err) {
    console.error("❌ Fehler in get():", err);
    return {
      props: {
        page: {
          title: { rendered: "Fehler" },
          content: { rendered: "<p>Seite konnte nicht geladen werden.</p>" },
        },
      },
    };
  }
}
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{page.title.rendered}</title>
  </head>

  <body>
    <main>
      <h1 set:html={page.title.rendered}></h1>
      <div set:html={page.content.rendered}></div>
    </main>
  </body>
</html>
