---
const baseUrl = import.meta.env.WP_API;

export async function getStaticPaths() {
  const res = await fetch(`${baseUrl}/pages`);
  const pages = await res.json();

  return pages.map((page) => ({
    params: { slug: page.slug },
    props: { page, pages },
  }));
}

export async function get({ params }) {
  const res = await fetch(`${baseUrl}/pages?slug=${params.slug}`);
  const data = await res.json();
  const page = data[0];
  const allRes = await fetch(`${baseUrl}/pages`);
  const pages = await allRes.json();

  return { props: { page, pages } };
}

import Sidebar from "../components/Sidebar.astro";
import ContentView from "../components/ContentView.astro";
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <title>{page.title.rendered}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <Sidebar pages={pages} activeSlug={page.slug} />
    <ContentView page={page} />
  </body>
</html>
