---
import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";

export const prerender = true;

// ðŸ”§ Alle Seiten aus der WP-API holen (fÃ¼r Routing + Sidebar)
export async function getStaticPaths() {
  const baseUrl = import.meta.env.WP_API;

  try {
    // Alle Seiten holen, nach MenÃ¼-Reihenfolge sortiert
    const res = await fetch(
      `${baseUrl}/pages?per_page=100&orderby=menu_order&order=asc&status=publish`
    );
    const pages = await res.json();

    // ðŸ” Jede Seite einzeln als Route zurÃ¼ckgeben
    return pages.map((page) => ({
      params: { slug: page.slug },
      props: {
        page,
        pages, // alle Seiten Ã¼bergeben, nicht filtern!
      },
    }));
  } catch (err) {
    console.error("âŒ Fehler in getStaticPaths:", err);
    return [];
  }
}

const { page, pages } = Astro.props;
const slug = page?.slug;

// ðŸ‘‡ Kontakt-Seite ans Ende verschieben
let sortedPages = [...pages];
const kontaktIndex = sortedPages.findIndex((p) => p.slug === "kontakt");
if (kontaktIndex > -1) {
  const [kontaktPage] = sortedPages.splice(kontaktIndex, 1);
  sortedPages.push(kontaktPage);
}
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{page?.title?.rendered || "LSD Berlin"}</title>
  </head>

  <body class={`slug-${slug}`}>
    <div class="grid-layout">
      <!-- ðŸ”— SeitenmenÃ¼ -->
      <Sidebar pages={sortedPages} activeSlug={slug} />

      <!-- ðŸ“„ Seiteninhalt -->
      <main class="content-area">
        <div class="content" set:html={page?.content?.rendered}></div>
      </main>
    </div>
  </body>
</html>
