---
import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";

const baseUrl = import.meta.env.WP_API;

// Alle Seiten laden (für Menü)
let pages = [];
try {
  const res = await fetch(`${baseUrl}/pages?per_page=100`);
  if (res.ok) {
    pages = await res.json();
  }
} catch (err) {
  console.error("❌ Seiten konnten nicht geladen werden:", err);
}

// Impressum-Seite laden
let impressum = null;
try {
  const res = await fetch(`${baseUrl}/pages?slug=impressum`);
  if (res.ok) {
    const data = await res.json();
    impressum = data[0];
  }
} catch (err) {
  console.error("❌ Fehler beim Laden der Impressum-Seite:", err);
}
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{impressum?.title?.rendered || "Impressum – LSD Berlin"}</title>
  </head>
  <body class="impressum">
    <div class="grid-layout">
      <Sidebar pages={pages} activeSlug={impressum?.slug} />
      <main class="content-area">
        <div class="content" set:html={impressum?.content?.rendered}></div>
      </main>
    </div>
  </body>
</html>
