---
import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";

const baseUrl = import.meta.env.WP_API;

// Alle Seiten laden (für Menü)
let pages = [];
try {
  const res = await fetch(`${baseUrl}/pages?per_page=100&orderby=menu_order&order=asc`);
  if (res.ok) {
    pages = await res.json();
  }
} catch (err) {
  console.error("❌ Seiten konnten nicht geladen werden:", err);
}

// Erste Seite (Startseite) laden
let firstPage = null;
try {
  const res = await fetch(`${baseUrl}/pages?per_page=1&orderby=menu_order&order=asc`);
  if (res.ok) {
    const data = await res.json();
    firstPage = data[0];
  }
} catch (err) {
  console.error("❌ Fehler beim Laden der Startseite:", err);
}
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{firstPage?.title?.rendered || "LSD Berlin"}</title>
  </head>
  <body class="home">
    <div class="grid-layout">
      <Sidebar pages={pages} activeSlug={firstPage?.slug} />
      <main class="content-area">
        <div class="content" set:html={firstPage?.content?.rendered}></div>
      </main>
    </div>
  </body>
</html>
