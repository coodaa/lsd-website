---
import Sidebar from "../components/Sidebar.astro";
import ContentView from "../components/ContentView.astro";
import "../styles/global.css";

const baseUrl = import.meta.env.WP_API;

// Alle Seiten laden
let pages = [];
try {
  const res = await fetch(`${baseUrl}/pages?per_page=100`);
  if (res.ok) {
    pages = await res.json();
  } else {
    console.error("❌ WP fetch error:", res.status);
  }
} catch (err) {
  console.error("❌ Verbindung fehlgeschlagen:", err);
}

// Aktuelle Seite anhand Slug aus URL finden
const { slug } = Astro.params;
const currentPage = pages.find((p) => p.slug === slug) || pages[0];
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{currentPage?.title?.rendered || "LSD Berlin"}</title>
  </head>
  <body>
    {pages.length === 0 ? (
      <p>⚠️ Keine Seiten gefunden. Prüfe bitte die API-URL: {baseUrl}/pages</p>
    ) : (
      <>
        <Sidebar pages={pages} activeSlug={currentPage?.slug} />
        <ContentView page={currentPage} />
      </>
    )}
  </body>
</html>
