---
import Sidebar from "../components/Sidebar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

export const prerender = false;

const baseUrl = import.meta.env.WP_API;

// Alle Seiten laden
const res = await fetch(
  `${baseUrl}/pages?per_page=100&orderby=menu_order&order=asc&status=publish`
);
const pages = await res.json();

// Erste Hauptseite (Startseite)
const mainPages = pages.filter((p) => p.parent === 0);
const firstPage = mainPages[0] ?? pages[0];

// Kindseiten der Startseite
const childPages = pages.filter((p) => p.parent === firstPage?.id);

// Hauptnavigation sortieren + "Kontakt" ans Ende
let sortedMainPages = [...mainPages];
const kontaktIndex = sortedMainPages.findIndex((p) => p.slug === "kontakt");
if (kontaktIndex > -1) {
  const [kontaktPage] = sortedMainPages.splice(kontaktIndex, 1);
  sortedMainPages.push(kontaktPage);
}

// Footer-Seiten (Impressum / Datenschutz)
const footerPages = sortedMainPages.filter((p) =>
  ["impressum", "datenschutz"].some((term) =>
    p.title?.rendered?.toLowerCase().includes(term)
  )
);

// Hilfsfunktion: HTML-Entities und Umlaute sauber decodieren
function fix(str = "") {
  if (!str) return "";
  let s = String(str);

  const entityMap = {
    "&auml;": "ä",
    "&ouml;": "ö",
    "&uuml;": "ü",
    "&Auml;": "Ä",
    "&Ouml;": "Ö",
    "&Uuml;": "Ü",
    "&szlig;": "ß",
    "&quot;": '"',
    "&amp;": "&",
    "&lt;": "<",
    "&gt;": ">",
    "&nbsp;": " ",
  };

  s = s.replace(
    /&(auml|ouml|uuml|Auml|Ouml|Uuml|szlig|quot|amp|lt|gt|nbsp);/g,
    (match) => entityMap[match] ?? match
  );

  // numerische Entities (dezimal)
  s = s.replace(/&#(\d+);/g, (_, dec) =>
    String.fromCharCode(parseInt(dec, 10))
  );

  // numerische Entities (hex)
  s = s.replace(/&#x([0-9a-fA-F]+);/g, (_, hex) =>
    String.fromCharCode(parseInt(hex, 16))
  );

  return s;
}

// Erstes Bild aus einem HTML-String holen
function getFirstImage(html = "") {
  const match = html.match(/<img[^>]+src="([^">]+)"/i);
  return match ? match[1] : null;
}
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <title>{fix(firstPage?.title?.rendered || "LSD Berlin")}</title>
  </head>

  <body class={`slug-${firstPage?.slug || "home"}`}>
    <div class="grid-layout">
      <Sidebar pages={sortedMainPages} activeSlug={firstPage?.slug} />

      <main class="content-area">
        <div class="content">
          <div set:html={fix(firstPage?.content?.rendered || "")} />

          {
            childPages.length > 0 && (
              <div class="subpages">
                {childPages.map((child) => {
                  const img = getFirstImage(child.content?.rendered || "");
                  return (
                    <a href={`/${child.slug}`} class="subpage">
                      {img && (
                        <img src={img} alt={fix(child.title?.rendered || "")} />
                      )}
                      <h2 set:html={fix(child.title?.rendered || "")} />
                    </a>
                  );
                })}
              </div>
            )
          }
        </div>
      </main>
    </div>

    <Footer footerPages={footerPages} />
  </body>
</html>
