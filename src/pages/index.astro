---
import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";

const baseUrl = import.meta.env.WP_API;

// ðŸ”¹ Alle verÃ¶ffentlichten Seiten laden
let pages = [];
try {
  const res = await fetch(
    `${baseUrl}/pages?per_page=100&orderby=menu_order&order=asc&status=publish`
  );
  if (res.ok) {
    pages = await res.json();
  }
} catch (err) {
  console.error("âŒ Fehler beim Laden der Seiten:", err);
}

// ðŸ”¹ Erste Hauptseite bestimmen (z. B. LSD)
const firstPage = pages.find((p) => p.parent === 0);

// ðŸ”¹ Unterseiten dieser Seite
const childPages = pages.filter((p) => p.parent === firstPage?.id);

// ðŸ”¹ MenÃ¼ sortieren (Kontakt ans Ende)
let sortedPages = [...pages.filter((p) => p.parent === 0)];
const kontaktIndex = sortedPages.findIndex((p) => p.slug === "kontakt");
if (kontaktIndex > -1) {
  const [kontaktPage] = sortedPages.splice(kontaktIndex, 1);
  sortedPages.push(kontaktPage);
}

// ðŸ”¹ Erstes Bild aus HTML-Inhalt extrahieren
function getFirstImage(html) {
  const match = html?.match(/<img[^>]+src="([^">]+)"/i);
  return match ? match[1] : null;
}
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{firstPage?.title?.rendered || "LSD Berlin"}</title>
  </head>

  <body class={`slug-${firstPage?.slug || "home"}`}>
    <div class="grid-layout">
      <Sidebar pages={sortedPages} activeSlug={firstPage?.slug} />

      <main class="content-area">
        <div class="content">
          <!-- ðŸ”¹ Titel + Hauptinhalt -->
          <div set:html={firstPage?.content?.rendered}></div>

          <!-- ðŸ”¹ Unterseiten mit Bildern -->
          {childPages.length > 0 && (
            <div class="subpages">
              {childPages.map((child) => {
                const img = getFirstImage(child.content.rendered);
                return (
                  <a href={`/${child.slug}`} class="subpage">
                    {img && <img src={img} alt={child.title.rendered} />}
                    <h2 set:html={child.title.rendered}></h2>
                  </a>
                );
              })}
            </div>
          )}
        </div>
      </main>
    </div>
  </body>
</html>

<style>
  .grid-layout {
    display: grid;
    grid-template-columns: 280px 1fr;
    height: 100vh;
  }

  .content-area {
    overflow-y: auto;
    padding: 2rem;
  }

  .content {
    position: relative;
    animation: fadeIn 0.4s ease;
  }

  .subpages {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-top: 3rem;
    align-items: center;
  }

  .subpage {
    text-decoration: none;
    color: black;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .subpage img {
    display: block;
    width: 85%;
    max-width: 85%;
    margin: 0 auto 1rem auto;
  }

  .subpage h2 {
    width: 85%;
    text-align: left;
    font-size: 1rem;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 900px) {
    .grid-layout {
      grid-template-columns: 1fr;
    }

    .content-area {
      padding: 1.5rem 0;
      display: flex;
      justify-content: center;
    }

    .content {
      width: 90%;
      margin: 0 auto;
    }

    .subpage img {
      width: 90%;
      max-width: 90%;
    }

    .subpage h2 {
      width: 90%;
      margin-left: 0;
    }
  }
</style>
