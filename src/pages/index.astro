---
import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";

export const prerender = false;

const baseUrl = import.meta.env.WP_API;

const res = await fetch(
  `${baseUrl}/pages?per_page=100&orderby=menu_order&order=asc&status=publish`
);
const pages = await res.json();

const firstPage = pages.find((p) => p.parent === 0);
const childPages = pages.filter((p) => p.parent === firstPage?.id);

let sortedPages = pages.filter((p) => p.parent === 0);
const idx = sortedPages.findIndex((p) => p.slug === "kontakt");
if (idx > -1) {
  const [item] = sortedPages.splice(idx, 1);
  sortedPages.push(item);
}

function getFirstImage(html) {
  const match = html?.match(/<img[^>]+src="([^">]+)"/i);
  return match ? match[1] : null;
}
---

<html lang="de">
  <body class={`slug-${firstPage.slug}`}>
    <div class="grid-layout">
      <Sidebar pages={sortedPages} activeSlug={firstPage.slug} />

      <main class="content-area">
        <div class="content">
          <div set:html={firstPage.content.rendered} />

          {childPages.length > 0 && (
            <div class="subpages">
              {childPages.map((child) => (
                <a href={`/${child.slug}`} class="subpage">
                  {getFirstImage(child.content.rendered) && (
                    <img src={getFirstImage(child.content.rendered)} />
                  )}
                  <h2 set:html={child.title.rendered} />
                </a>
              ))}
            </div>
          )}
        </div>
      </main>
    </div>
  </body>
</html>
