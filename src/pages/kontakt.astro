---
import Sidebar from "../components/Sidebar.astro";
import "../styles/global.css";

const baseUrl = import.meta.env.WP_API;

// Alle Seiten laden (für Menü)
let pages = [];
try {
  const res = await fetch(`${baseUrl}/pages?per_page=100`);
  if (res.ok) {
    pages = await res.json();
  }
} catch (err) {
  console.error("❌ Seiten konnten nicht geladen werden:", err);
}

// Nur die Kontaktseite laden
let kontakt = null;
try {
  const res = await fetch(`${baseUrl}/pages?slug=kontakt`);
  if (res.ok) {
    const data = await res.json();
    kontakt = data[0];
  }
} catch (err) {
  console.error("❌ Fehler beim Laden der Kontaktseite:", err);
}
---

<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{kontakt?.title?.rendered || "Kontakt – LSD Berlin"}</title>
  </head>
  <body class="kontakt">
    <div class="grid-layout">
      <Sidebar pages={pages} activeSlug={kontakt?.slug} />
      <main class="content-area">
        <div class="content" set:html={kontakt?.content?.rendered}></div>
      </main>
    </div>
  </body>
</html>
